@model List<BusinessLogic.Models.LecGroup>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Группы</h1>
    <table class="table mt-4">
  <thead class="thead-dark bg-primary text-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Номер</th>
      <th scope="col">Управление</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      @foreach(var lecgroup in Model){
       <tr>
      <th scope="row">@lecgroup.Id</th>
      <td>@lecgroup.Number</td>
      <td>@Html.ActionLink("Изменить", "UpdateLecGroup", lecgroup)</td>
      <td>@Html.ActionLink("Удалить", "DeleteLecGroup", lecgroup)</td>
    </tr>
      }
  </tbody>
</table>
  <div class="band-list text-light">
    <a class="btn btn-outline-primary" asp-action="CreateLecGroup">Добавить новую группу</a>
    <a class="btn btn-outline-primary" asp-action="Index">Вернуться на главную</a>

 </div>
</div>
