@model List<BusinessLogic.Models.LecGroup>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Группы</h1>
    <table class="table mt-4">
  <thead class="thead-dark bg-primary text-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Номер</th>
      <th scope="col">Управление</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var student in Model){
       <tr>
      <th scope="row">@student.Id</th>
      <td>@student.Number</td>
      <td>@Html.ActionLink("Изменить", "ChangeLection", student)</td>
      <td>@Html.ActionLink("Удалить", "DeleteLection", student)</td>
    </tr>
      }
  </tbody>
</table>
  <div class="band-list text-light">
    <a class="btn btn-outline-primary" asp-action="CreateStudent">Добавить нового студента</a>
 </div>
</div>
