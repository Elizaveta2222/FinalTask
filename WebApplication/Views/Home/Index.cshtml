@model List<BusinessLogic.Models.Lection>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table mt-4">
        <tr>
            <td>    
                <a class="btn btn-outline-primary" asp-action="CreateTeacher">Добавить нового преподавателя</a>
            </td>
            <td>    
                <a class="btn btn-outline-primary" asp-action="CreateLecGroup">Добавить новую группу</a>
            </td>
            <td>    
                <a class="btn btn-outline-primary" asp-action="Students">Студенты</a>
            </td>
            <td>    
                <a class="btn btn-outline-primary" asp-action="CreateLection">Добавить новую лекцию</a>
            </td>
        </tr>
    </table>
    <h1 class="display-4">Лекции</h1>
    <table class="table mt-4">
  <thead class="thead-dark bg-primary text-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Предмет</th>
      <th scope="col">Дата</th>
      <th scope="col">Преподаватель</th>
      <th scope="col">ДЗ</th>
      <th scope="col">Управление</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var lection in Model){
       <tr>
      <th scope="row">@lection.Id</th>
      <td>@lection.Subject</td>
      <td>@lection.Date</td>
      <td>@lection.Teacher</td>
      <td>@lection.Homework</td>
      <td>@Html.ActionLink("Изменить", "ChangeLection", lection)</td>
      <td>@Html.ActionLink("Удалить", "DeleteLection", lection)</td>
      <td>@Html.ActionLink("Проставить успеваемость", "ChangeJournal", "Home", new { id = lection.Id }, null)</td>
    </tr>
      }
  </tbody>
</table>
</div>
