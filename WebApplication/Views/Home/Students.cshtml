@model List<BusinessLogic.Models.Student>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Студенты</h1>
    <table class="table mt-4">
  <thead class="thead-dark bg-primary text-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Имя</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Группа</th>
      <th scope="col">Управление</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var student in Model){
       <tr>
      <th scope="row">@student.Id</th>
      <td>@student.Name</td>
      <td>@student.Surname</td>
      <td>@student.Email</td>
      <td>@student.Phone</td>
      <td>@student.LecGroup.Number</td>
      <td>@Html.ActionLink("Изменить", "ChangeStudent", student)</td>
      <td>@Html.ActionLink("Удалить", "DeleteStudent", student)</td>
    </tr>
      }
  </tbody>
</table>
  <div class="band-list text-light">
    <a class="btn btn-outline-primary" asp-action="CreateStudent">Добавить нового студента</a>
 </div>
</div>
