@model BusinessLogic.Models.GroupsToLec;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Студент</h1>
    @using (Html.BeginForm("CreateVisitJournal", "Home", FormMethod.Post))
    {
     <input name="LectionId" value="@ViewBag.Lection.Id" hidden/>   
    <div class="row g-3 align-items-center p-4">
        <div class="col-3 "></div>

            <div class="col-2 ">
                <label for="inputCon" class="col-form-label">Группа</label>
            </div>
            <div class="col-3">
                @Html.DropDownListFor(m => m.GroupId, ViewBag.LecGroups as SelectList, new { @class = "form-select" })
            </div>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    }

</div>