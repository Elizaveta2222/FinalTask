@model BusinessLogic.Models.Student;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Студент</h1>
    @using (Html.BeginForm("CreateStudent", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="row g-3 align-items-center p-4">
        <div class="col-3"></div>
            <div class="col-2">
                <label for="inputName" class="col-form-label">Имя</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
            </div>
    </div>
        <div class="row g-3 align-items-center p-4">
        <div class="col-3"></div>
            <div class="col-2">
                <label for="inputName" class="col-form-label">Фамилия</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control"})
            </div>
    </div>
   <div class="row g-3 align-items-center p-4">
        <div class="col-3"></div>
            <div class="col-2">
                <label for="inputName" class="col-form-label">Email</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
            </div>
    </div>
       <div class="row g-3 align-items-center p-4">
        <div class="col-3"></div>
            <div class="col-2">
                <label for="inputName" class="col-form-label">Номер телефона</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
            </div>
    </div>
    <div class="row g-3 align-items-center p-4">
        <div class="col-3 "></div>
            <div class="col-2 ">
                <label for="inputCon" class="col-form-label">Группа</label>
            </div>
            <div class="col-3">
                @Html.DropDownListFor(model => model.LecGroup.Id, ViewBag.LecGroups as SelectList, new { @class = "form-select" })
            </div>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    }

</div>